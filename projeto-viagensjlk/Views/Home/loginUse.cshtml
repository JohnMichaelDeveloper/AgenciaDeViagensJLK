@using Microsoft.AspNetCore.Http;
@model TipoUse
@{
    ViewData["Title"] = "Login";
}

<main class="fundo-color" style="min-height: 100vh;">
    <div >

        <div class="login-content d-flex justify-content-around" style="position:absolute; margin: auto;">
            @*<div class="ml-6 img-right"><img src="" /></div>*@

            <div>
                <div class="icone-titulo"><img class="icones-content" src="~/img/icone-conta.png"><h3 class="titulos">CONTA</h3></div>
                <form class="form-style" action="loginUse" method="POST">
                    <label class="label-style" asp-for="loginUse">Login:</label>
                    <input class="input-style" asp-for="loginUse" name="loginUse" placeholder="Seu login" required>
                    <label class="label-style" asp-for="senhaUse">Senha:</label>
                    <input class="input-style" type="password" asp-for="senhaUse" name="senhaUse" placeholder="Sua senha" required>
                    <input type="submit" value="Acessar" class="input-button">
                    <p class="mensagem-style">@ViewBag.Sucesso</p>
                </form>
            </div>




            @*<div style="background-image: url(https://media.discordapp.net/attachments/871853660706058323/926184622855954554/banner7.png) !important; opacity:80%; background-size: contain !important; background-repeat: no-repeat !important; width: 559px !important; height: 371px !important;">*@
            <div class="bloco-texto img-right ">
                <h3 class="titulos">VANTAGENS DA CONTA</h3>
                <ul>
                    <li class="label-style">Acesso aos pacotes de viagem</li>
                    <li class="label-style">Aviso sobre promoções</li>
                    <li class="label-style">Realização de compras</li>
                    <li class="label-style">Suporte e atendimento</li>
                </ul>
            </div>
        </div>
    </div>




</main>